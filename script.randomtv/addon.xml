<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.randomtv"
       name="Random TV Show Player (post Dharma!)"
       version="1.1"
       provider-name="benjhastings">
  <requires>
    <import addon="xbmc.python" version="2.0"/>
     <import addon="script.module.simplejson" version="2.0.10"/>
  </requires>
  <extension point="xbmc.python.script"
             library="default.py" />
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <summary lang="en">Random TV Show Player</summary>
    <description lang="en">Plays a random tv show from user's library. Can be filtered by genre and show.</description>
  </extension>
</addon>
